AutoBtn.MouseButton1Click:Connect(function()
    Config.AutoTrain = not Config.AutoTrain
    if Config.AutoTrain then
        AutoBtn.BackgroundColor3 = Color3.fromRGB(0, 200, 255)
        AutoBtn.Text = "🤖 AUTO TRAIN: ON"
    else
        AutoBtn.BackgroundColor3 = Color3.fromRGB(50, 50, 90)
        AutoBtn.Text = "🤖 AUTO TRAIN: OFF"
    end
end)

MultiBtn.MouseButton1Click:Connect(function()
    local isOn = MultiBtn.Text:find("ON")
    if isOn then
        MultiBtn.BackgroundColor3 = Color3.fromRGB(80, 80, 100)
        MultiBtn.Text = "🔥 MULTI-THREAD: OFF"
    else
        MultiBtn.BackgroundColor3 = Color3.fromRGB(100, 50, 255)
        MultiBtn.Text = "🔥 MULTI-THREAD: ON"
    end
end)

-- EXTREME HOOK SYSTEM (FIXED)
local function SetupHooks()
    if Config.HookActive then return end
    Config.HookActive = true
    
    local oldNC
    oldNC = hookmetamethod(game, "__namecall", function(self, ...)
        if not Config.Enabled then
            return oldNC(self, ...)
        end
        
        local method = getnamecallmethod()
        local args = {...}
        
        -- FireServer Hook
        if method == "FireServer" then
            Stats.RequestCount = Stats.RequestCount + 1
            
            if self.Name == "TrainSpeedHasChanged" then
                if args[1] and tonumber(args[1]) then
                    local speedMult = Config.SpeedMultiplier
                    if Config.MegaBoost then speedMult = speedMult * 100 end
                    if Config.InfiniteMode then speedMult = speedMult * 10 end
                    args[1] = args[1] * speedMult
                    Stats.TrainCount = Stats.TrainCount + 1
                end
            end
            
            -- Multiply all numeric args
            if Config.InfiniteMode then
                for i, arg in ipairs(args) do
                    if typeof(arg) == "number" and arg > 0 and arg < 1e15 then
                        args[i] = arg * Config.Multiplier
                    end
                end
            end
            
            return oldNC(self, unpack(args))
        end
        
        -- InvokeServer Hook
        if method == "InvokeServer" then
            Stats.RequestCount = Stats.RequestCount + 1
            
            -- Multiply inputs
            if Config.InfiniteMode then
                for i, arg in ipairs(args) do
                    if typeof(arg) == "number" and arg > 0 and arg < 1e15 then
                        args[i] = arg * Config.Multiplier
                    end
                end
            end
            
            local results = {pcall(oldNC, self, unpack(args))}
            local success = table.remove(results, 1)
            
            if success and Config.Enabled then
                for i, result in ipairs(results) do
                    if typeof(result) == "number" and result > 0 then
                        local mult = Config.Multiplier
                        if Config.MegaBoost then mult = mult * 100 end
                        if Config.InfiniteMode then mult = mult * 10 end
                        
                        Stats.TotalGains = Stats.TotalGains + (result * (mult - 1))
                        results[i] = result * mult
                    end
                end
            end
            
            return unpack(results)
        end
        
        return oldNC(self, ...)
    end)
    
    print("✅ Hooks Active")
end

-- Hook Bindables
task.spawn(function()
    task.wait(2)
    pcall(function()
        for _, desc in pairs(ReplicatedStorage:GetDescendants()) do
            if desc:IsA("BindableFunction") then
                pcall(function()
                    local oldInv = desc.Invoke
                    desc.Invoke = function(self, ...)
                        local results = {oldInv(self, ...)}
                        
                        if Config.Enabled then
                            for i, result in ipairs(results) do
                                if typeof(result) == "number" and result > 0 then
                                    local mult = Config.Multiplier
                                    if Config.MegaBoost then mult = mult * 100 end
                                    if Config.InfiniteMode then mult = mult * 10 end
                                    results[i] = result * mult
                                end
                            end
                        end
                        
                        return unpack(results)
                    end
                end)
            end
        end
    end)
end)

-- Monitor RemoteEvents
task.spawn(function()
    task.wait(2)
    pcall(function()
        for _, desc in pairs(ReplicatedStorage:GetDescendants()) do
            if desc:IsA("RemoteEvent") then
                pcall(function()
                    desc.OnClientEvent:Connect(function(...)
                        if Config.Enabled then
                            local args = {...}
                            for _, arg in ipairs(args) do
                                if typeof(arg) == "number" and arg > 0 and arg < 1e18 then
                                    local mult = Config.Multiplier
                                    if Config.MegaBoost then mult = mult * 100 end
                                    Stats.TotalGains = Stats.TotalGains + (arg * mult)
                                end
                            end
                        end
                    end)
                end)
            end
        end
    end)
end)

-- Training Thread
local function TrainThread()
    while true do
        task.wait(0.001)
        
        if Config.AutoTrain and Config.Enabled and IsReady then
            Stats.ThreadsRunning = Stats.ThreadsRunning + 1
            
            pcall(function()
                if Cache.Stationary then
                    Cache.Stationary:InvokeServer()
                end
                
                if Cache.Mobile then
                    Cache.Mobile:InvokeServer()
                end
                
                if Config.MegaBoost then
                    if Cache.Binding then
                        Cache.Binding:InvokeServer("Training_2001", "Emit_2")
                    end
                    
                    if Cache.Boost then
                        Cache.Boost:InvokeServer()
                    end
                end
            end)
            
            task.wait()
            Stats.ThreadsRunning = math.max(0, Stats.ThreadsRunning - 1)
        else
            task.wait(0.1)
        end
    end
end

-- Multi-thread spawner
task.spawn(function()
    while task.wait(1) do
        if Config.AutoTrain and Config.Enabled and MultiBtn.Text:find("ON") and IsReady then
            local active = Stats.ThreadsRunning
            local target = Config.ThreadCount
            
            if active < target then
                for i = 1, target do
                    task.spawn(TrainThread)
                end
            end
        end
    end
end)

-- Speed Spam
task.spawn(function()
    while true do
        task.wait(0.0001)
        
        if Config.Enabled and IsReady and Cache.Speed then
            pcall(function()
                local speedVal = 999999999 * Config.SpeedMultiplier
                if Config.MegaBoost then speedVal = speedVal * 100 end
                if Config.InfiniteMode then speedVal = speedVal * 10 end
                Cache.Speed:FireServer(speedVal)
                Stats.RequestCount = Stats.RequestCount + 1
            end)
        end
    end
end)

-- Heartbeat Training
RunService.Heartbeat:Connect(function()
    if Config.Enabled and Config.MegaBoost and IsReady then
        pcall(function()
            if Cache.Stationary then Cache.Stationary:InvokeServer() end
            if Cache.Mobile then Cache.Mobile:InvokeServer() end
        end)
    end
end)

-- RenderStepped (Fastest)
RunService.RenderStepped:Connect(function()
    if Config.Enabled and Config.InfiniteMode and IsReady and Cache.Speed then
        pcall(function()
            Cache.Speed:FireServer(999999999 * Config.SpeedMultiplier * 1000)
        end)
    end
end)

-- Stats Monitor
task.spawn(function()
    while task.wait(0.5) do
        if Config.Enabled then
            Update()
        end
    end
end)

-- Smooth effects
task.spawn(function()
    local rot = 0
    while task.wait(0.03) do
        rot = (rot + 4) % 360
        Gradient.Rotation = rot
        
        if Config.Enabled then
            Stroke.Color = Color3.fromRGB(
                math.floor(200 + 55 * math.sin(rot * 0.1)),
                math.floor(55 * math.cos(rot * 0.15)),
                math.floor(200 + 55 * math.sin(rot * 0.2))
            )
        end
    end
end)

