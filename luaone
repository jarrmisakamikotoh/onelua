    Config.Enabled = false
    Config.AutoTrain = false
    ScreenGui:Destroy()
end)

MegaBtn.MouseButton1Click:Connect(function()
    Config.MegaBoost = not Config.MegaBoost
    if Config.MegaBoost then
        MegaBtn.BackgroundColor3 = Color3.fromRGB(255, 0, 0)
        MegaBtn.Text = "💥 MEGA BOOST: ON (x100)"
    else
        MegaBtn.BackgroundColor3 = Color3.fromRGB(80, 80, 100)
        MegaBtn.Text = "💥 MEGA BOOST: OFF"
    end
end)

